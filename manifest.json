{
  "name": "Shades",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Webpages can be bright. Throw some shade at em.",
  "homepage_url": "http://github.com/sartaj/browser-shades",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-off.png",
    "default_title": "Terminize"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}